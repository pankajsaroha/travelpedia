---
const { city } = Astro.props;
---
<article class="card p-4 rounded-lg">
  <a href={`/city/${city.slug}`} class="block">
    <img src={city.image || '/images/placeholder-1.svg'} alt={`${city.title} thumbnail`} class="card-img mb-3" />
    <h3 class="text-xl font-semibold">{city.title}</h3>
    <p class="text-sm text-muted">{city.state}</p>
    <p class="mt-2 text-sm text-slate-600">{city.excerpt}</p>
  </a>
</article>
