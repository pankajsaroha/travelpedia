---
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="sticky top-0 z-50 w-full backdrop-blur bg-white/80 dark:bg-slate-900/80 border-b dark:border-slate-700 transition-all shadow-sm">
  <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">

    <!-- PREMIUM TEXT LOGO -->
    <a href="/" class="flex items-center gap-2 group">
      <span class="text-3xl font-extrabold tracking-tight text-accent group-hover:text-accentDark transition-all">
        Travel<span class="text-slate-800 dark:text-slate-200 group-hover:text-accent transition">pedia</span>
      </span>
    </a>

    <nav class="flex items-center gap-6">

      <a href="/about"
         class="text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-accent dark:hover:text-accent transition">
        About
      </a>

      <a href="/contact"
         class="text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-accent dark:hover:text-accent transition">
        Contact
      </a>

      <!-- THEME TOGGLE -->
      <ThemeToggle />

    </nav>

  </div>
</header>

<style>
  html.dark .light-icon { display: none; }
  html.dark .dark-icon { display: inline; }
</style>
