---
const { city } = Astro.props;

const facts = [];

if (city.bestTime?.best) {
  facts.push({
    label: "Best time to visit",
    value: city.bestTime.best
  });
}

if (city.idealStay?.recommended) {
  facts.push({
    label: "Ideal stay",
    value: city.idealStay.recommended
  });
}

if (city.distances?.airport) {
  facts.push({
    label: "Airport",
    value: city.distances.airport
  });
}

if (city.distances?.railway) {
  facts.push({
    label: "Railway",
    value: city.distances.railway
  });
}

if (city.region) {
  facts.push({
    label: "Region",
    value: city.region.charAt(0).toUpperCase() + city.region.slice(1)
  });
}
---

{facts.length > 0 && (
  <section>
    <h2 class="text-xl font-semibold mb-4">
      Quick Facts
    </h2>

    <ul class="space-y-2 text-slate-700 dark:text-slate-300">
      {facts.map(f => (
        <li class="flex gap-2">
          <span class="text-accent">â€¢</span>
          <span>
            <strong>{f.label}: </strong> {f.value}
          </span>
        </li>
      ))}
    </ul>
  </section>
)}
