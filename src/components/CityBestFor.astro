---
const { items } = Astro.props;
---

<section class="space-y-4">
  <h2 class="text-2xl font-bold">Best For</h2>

  <div class="flex flex-wrap gap-3">
    {items.map(item => (
      <span class="px-4 py-2 rounded-full bg-accentLight text-sm font-medium">
        {item}
      </span>
    ))}
  </div>
</section>
