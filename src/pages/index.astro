---
import BaseLayout from "../layouts/BaseLayout.astro";
import CityCard from "../components/CityCard.astro";

// Load cities
const cityPages = Object.values(
  import.meta.glob('../content/cities/*.md', { eager: true })
).map((m) => m.frontmatter);

// Featured cities (top 6)
const featured = cityPages.slice(0, 6);
---

<BaseLayout title="Travelpedia — Explore Top Cities">

  <!-- PREMIUM HERO SECTION -->
  <section class="mt-10 mb-16 text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold leading-tight text-slate-900 dark:text-white">
      Discover <span class="text-accent">Cities</span>, Adventures & Hidden Gems
    </h1>

    <p class="mt-4 text-lg text-slate-600 dark:text-slate-300 max-w-2xl mx-auto">
      Explore hand-picked travel guides with history, places to visit, best hotels, tips, and local secrets.
    </p>

    <!-- SEARCH BAR -->
    <div class="mt-8 max-w-xl mx-auto relative">
      <input
        id="site-search"
        placeholder="Search for a city…"
        class="w-full p-4 rounded-xl border dark:border-slate-700 bg-white dark:bg-slate-800 
               shadow-md focus:ring-2 ring-accent outline-none transition"
      />

      <div
        id="suggestions"
        class="absolute left-0 right-0 bg-white dark:bg-slate-800 border dark:border-slate-700 
               rounded-xl mt-2 shadow-xl hidden max-h-64 overflow-y-auto z-50"
      ></div>
    </div>
  </section>

  <!-- FEATURED DESTINATIONS -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold mb-6 text-slate-900 dark:text-white tracking-tight">
      Featured Destinations
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      {featured.map((c) => <CityCard city={c} />)}
    </div>
  </section>

  <!-- THEMATIC COLLECTIONS -->
  <section class="mb-16">
    <h2 class="text-3xl font-bold mb-6 text-slate-900 dark:text-white tracking-tight">
      Travel Themes
    </h2>

    <div class="grid md:grid-cols-3 gap-6">
      <div class="rounded-xl p-6 bg-accentLight dark:bg-slate-800 border dark:border-slate-700 shadow-sm hover:shadow-md transition">
        <h3 class="text-xl font-semibold mb-2">Spiritual Journeys</h3>
        <p class="text-slate-700 dark:text-slate-300 text-sm">Explore pilgrimage sites, ancient temples & sacred rivers.</p>
      </div>

      <div class="rounded-xl p-6 bg-accentLight dark:bg-slate-800 border dark:border-slate-700 shadow-sm hover:shadow-md transition">
        <h3 class="text-xl font-semibold mb-2">Adventure Destinations</h3>
        <p class="text-slate-700 dark:text-slate-300 text-sm">Trekking, rafting, camping, mountains & thrilling routes.</p>
      </div>

      <div class="rounded-xl p-6 bg-accentLight dark:bg-slate-800 border dark:border-slate-700 shadow-sm hover:shadow-md transition">
        <h3 class="text-xl font-semibold mb-2">Family Getaways</h3>
        <p class="text-slate-700 dark:text-slate-300 text-sm">Comfortable trips, scenic places & peaceful escapes.</p>
      </div>
    </div>
  </section>

  <!-- CALL TO ACTION -->
  <section class="py-16 mt-10 rounded-2xl bg-gradient-to-r from-accent to-accentDark text-white text-center shadow-lg">
    <h2 class="text-4xl font-bold mb-4">Plan Your Next Journey</h2>
    <p class="text-lg mb-6 opacity-90">Discover curated guides for every city in India.</p>
    
    <a href="/"
      class="inline-block px-8 py-4 bg-white text-accent font-semibold rounded-xl shadow-md hover:bg-slate-100 transition">
      Start Exploring
    </a>
  </section>

</BaseLayout>

<!-- SAFE JSON EMBED FOR SEARCH -->
<script type="application/json" id="city-data">
  {JSON.stringify(cityPages)}
</script>

<!-- SEARCH LOGIC -->
<script is:inline>
  const dataEl = document.getElementById("city-data");
  const cities = JSON.parse(dataEl.textContent);

  const input = document.getElementById("site-search");
  const suggestions = document.getElementById("suggestions");

  function renderSuggestion(c) {
    return `
      <div class="p-3 hover:bg-slate-100 dark:hover:bg-slate-700 cursor-pointer border-b dark:border-slate-700"
           data-slug="${c.slug}">
        <div class="font-semibold">${c.title}</div>
        <div class="text-sm text-slate-500 dark:text-slate-400">${c.excerpt || ""}</div>
      </div>
    `;
  }

  function search(q) {
    q = q.toLowerCase();
    return cities.filter((c) =>
      (c.title + " " + (c.excerpt || "") + " " + (c.state || "")).toLowerCase().includes(q)
    );
  }

  input.addEventListener("input", (e) => {
    const query = e.target.value.trim();
    if (!query) {
      suggestions.classList.add("hidden");
      suggestions.innerHTML = "";
      return;
    }

    const results = search(query);
    suggestions.innerHTML =
      results.length === 0
        ? "<div class='p-3 text-sm text-slate-500 dark:text-slate-400'>No results</div>"
        : results.map(renderSuggestion).join("");

    suggestions.classList.remove("hidden");
  });

  suggestions.addEventListener("click", (e) => {
    const el = e.target.closest("[data-slug]");
    if (!el) return;
    window.location.href = "/city/" + el.dataset.slug;
  });

  input.addEventListener("keydown", (e) => {
    if (e.key === "Enter") {
      const results = search(input.value.trim());
      if (results.length > 0) {
        window.location.href = "/city/" + results[0].slug;
      }
    }
  });
</script>
